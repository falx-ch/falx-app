---
// Layout Import
import BaseLayout from '../layouts/BaseLayout.astro';
// Component Imports - Mix of Astro (static) and React (interactive) components
import ShaderBackground from '../components/shader-background.tsx';
import Header from '../components/header.tsx';
import HeroContent from '../components/hero-content.tsx';
import ReportSection from '../components/ReportSection.astro';
import WorkflowBreakdown from '../components/WorkflowBreakdown.astro';
import AiInPractice from '../components/AiInPractice.astro';
import LegataFuture from '../components/LegataFuture.astro';
import FounderSection from '../components/FounderSection.astro';
import StartNowSection from '../components/StartNowSection.astro';
import SimpleFooter from '../components/simple-footer.tsx';
import GlobalAnimations from '../components/global-animations.tsx';
---

<BaseLayout>
	<GlobalAnimations client:load />
	<ShaderBackground client:load>
		<Header client:load />
		<HeroContent client:load />
	</ShaderBackground>
	<ReportSection />
	<WorkflowBreakdown />
	<AiInPractice />
	<LegataFuture />
	<FounderSection />
	<StartNowSection />
	<SimpleFooter client:idle />
</BaseLayout>
