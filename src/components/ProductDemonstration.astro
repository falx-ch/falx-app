---
// Astro wrapper component for Legata Future Section
// Static structure with selective hydration for interactive workflow
import type { Translations } from '@/lib/i18n';

export interface Props {
  class?: string;
  translations: Translations;
}

const { class: className, translations } = Astro.props;

// Import the interactive React component
import ProductDemoWorkflow from './product-demo-workflow.tsx';
import { Button } from '@/components/ui/button';
---

<section 
  id="legata"
  class={`min-h-screen legata-gradient text-white relative overflow-hidden py-16 lg:py-24 ${className || ''}`}
>
  <!-- Clean minimal background -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(71,85,105,0.03),transparent_70%)]" />

  <!-- Hero title - clean and minimal -->
  <div class="relative z-10 text-center pt-6 sm:pt-8 lg:pt-10 pb-1 sm:pb-2 lg:pb-3">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-light tracking-tight leading-tight text-white/95 text-shadow-subtle">
        {translations.product_demonstration.headline_accent ? (
          // English: "Legal Tech made human" - highlight accent at end
          <>
            {translations.product_demonstration.headline} <span class="font-serif italic font-medium text-red-300">{translations.product_demonstration.headline_accent}</span>
          </>
        ) : (
          // German: "Empathie trifft Legal Tech" - highlight headline at start
          <>
            <span class="font-serif italic font-medium text-red-300">{translations.product_demonstration.headline}</span> {translations.product_demonstration.headline_suffix}
          </>
        )}
      </h2>
      <p class="text-white/60 text-base lg:text-lg mt-3 max-w-2xl mx-auto text-shadow-subtle">
        {translations.product_demonstration.description}
      </p>
    </div>
  </div>

  <!-- Interactive workflow animation - hero section with responsive sizing -->
  <div class="relative flex-1 flex items-center justify-center py-2 sm:py-6 lg:py-8 min-h-[35vh] sm:min-h-[45vh] lg:min-h-[50vh] xl:min-h-[55vh]">
    <div class="w-full max-w-7xl mx-auto px-6 lg:px-8">
      <ProductDemoWorkflow client:visible />
    </div>
  </div>

  <!-- Authentic mission-driven CTA -->
  <div class="relative z-10 text-center pb-8 sm:pb-10 lg:pb-12">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <p class="text-white/70 text-base lg:text-lg mb-6 max-w-2xl mx-auto leading-relaxed text-shadow-subtle">
        {translations.product_demonstration.mission_statement}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
        <a href="https://cal.com/chrispkobler/discovery" target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto sm:order-1">
          <Button variant="primary" className="hover-lift animate-on-scroll w-full sm:w-auto px-12 py-4 text-base">
            {translations.product_demonstration.cta_primary}
          </Button>
        </a>
        <!-- Secondary button hidden for now -->
        <!-- <div class="relative group w-full sm:w-auto sm:order-2 hidden lg:block">
          <Button variant="secondary" className="animate-on-scroll opacity-50 cursor-not-allowed w-full sm:w-auto px-6 py-4 text-base !transition-colors !duration-200" disabled>
            {translations.product_demonstration.cta_secondary}
          </Button>
          <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-3 py-1 bg-black/80 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap pointer-events-none">
            {translations.product_demonstration.cta_secondary_tooltip}
          </div>
        </div> -->
      </div>
      
    </div>
  </div>
</section>