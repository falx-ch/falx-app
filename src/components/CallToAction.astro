---
// Astro wrapper component for Start Now CTA Section
// Fully static CTA section - no JavaScript needed
import type { Translations } from '@/lib/i18n';

export interface Props {
  class?: string;
  translations: Translations;
}

const { class: className, translations } = Astro.props;
import { Button } from '@/components/ui/button';
---

<section 
  class={`min-h-screen cta-gradient text-slate-900 flex flex-col relative py-16 lg:py-24 ${className || ''}`}
>
  <!-- Subtle neutral light background -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(156,163,175,0.05),transparent_70%)]" />

  <!-- Main content -->
  <div class="flex-1 flex items-center justify-center relative z-10">
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 flex justify-center">
      <div class="text-center max-w-2xl">
        <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light mb-8 sm:mb-12 tracking-tight leading-tight text-slate-900" set:html={`${translations.call_to_action.headline}<span class="font-medium italic font-serif text-slate-800">${translations.call_to_action.headline_accent}</span>${translations.call_to_action.headline_suffix || ''}`}>
        </h2>

        <p class="text-slate-600 text-lg leading-relaxed mb-8 max-w-xl mx-auto">
          {translations.call_to_action.description}
        </p>

        <div class="text-center">
          <a href="https://cal.com/chrispkobler/discovery" target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto inline-block">
            <Button variant="primary-dark" className="hover-lift animate-on-scroll w-full sm:w-auto">
              {translations.call_to_action.cta_button}
            </Button>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>