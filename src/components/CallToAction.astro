---
// Astro wrapper component for Start Now CTA Section
// Fully static CTA section - no JavaScript needed
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section 
  class={`min-h-screen cta-gradient text-slate-900 flex flex-col relative py-16 lg:py-24 ${className || ''}`}
>
  <!-- Subtle neutral light background -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(156,163,175,0.05),transparent_70%)]" />

  <!-- Main content -->
  <div class="flex-1 flex items-center justify-center relative z-10">
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 flex justify-center">
      <div class="text-center max-w-2xl">
        <h2 class="text-5xl md:text-7xl font-light mb-4 tracking-tight leading-tight text-slate-900">
          Starten Sie Ihre
        </h2>
        <h2 class="text-5xl md:text-7xl font-medium italic font-serif mb-12 tracking-tight text-slate-800">
          KI-Transformation.
        </h2>

        <button class="px-8 py-4 bg-slate-900 text-white font-medium rounded-full transition-all duration-300 hover:bg-slate-800 hover:shadow-xl transform hover:scale-105">
          Kostenlose Analyse buchen
        </button>
      </div>
    </div>
  </div>
</section>