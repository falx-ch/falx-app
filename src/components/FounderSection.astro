---
// Astro wrapper component for Founder Section
// Mostly static content with glass card styling
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section 
  class={`min-h-screen founder-gradient text-white flex items-center justify-center relative overflow-hidden py-16 lg:py-24 ${className || ''}`}
>
  <!-- Soft neutral background -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_25%_25%,rgba(148,163,184,0.03),transparent_75%)]" />
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_75%_75%,rgba(156,163,175,0.02),transparent_80%)]" />

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-16 items-center">
      <!-- Left column - Founder photo (40%) -->
      <div class="lg:col-span-2 relative overflow-hidden flex items-center justify-center">
        <div class="relative w-full max-w-lg">
          <div class="relative rounded-3xl bg-slate-800/30 backdrop-blur-md border border-white/10 shadow-2xl">
            <div class="relative aspect-[3/4] overflow-hidden rounded-3xl">
              <img
                src="/professional-founder-portrait-in-modern-office-set.png"
                alt="Thomas Müller, Founder & CEO"
                class="w-full h-full object-cover object-center"
              />
              <!-- Subtle top highlight like hero badge -->
              <div class="absolute top-0 left-1 right-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent rounded-full" />
            </div>
          </div>
        </div>
      </div>

      <!-- Right column - Content (60%) -->
      <div class="lg:col-span-3 space-y-6 lg:space-y-8">
        <div class="space-y-8">
          <div class="space-y-6">
            <h2 class="text-3xl lg:text-4xl xl:text-5xl font-light tracking-tight leading-tight">
              Ihr direkter Draht zum <span class="font-serif italic text-gray-700">Gründer</span>
            </h2>

            <div class="w-16 h-px bg-gradient-to-r from-gray-700 to-transparent"></div>
          </div>

          <blockquote class="relative">
            <div class="absolute -top-2 -left-4 text-4xl text-gray-700/30 font-serif">"</div>
            <p class="text-xl lg:text-2xl font-light italic text-white/90 leading-relaxed pl-6">
              Wir liefern keine Blackbox. Wir liefern eine Partnerschaft.
            </p>
            <div class="absolute -bottom-2 -right-4 text-4xl text-gray-700/30 font-serif">"</div>
          </blockquote>

          <div class="space-y-3">
            <p class="text-white/80 text-sm font-medium">
              — <strong class="text-white">Thomas Müller</strong>, Gründer & CEO
            </p>
            <a
              href="#"
              class="inline-flex items-center gap-2 text-gray-700 hover:text-gray-600 text-sm transition-colors duration-200 group"
            >
              LinkedIn
              <span class="transform group-hover:translate-x-1 transition-transform duration-200">→</span>
            </a>
          </div>

          <button class="px-8 py-3 rounded-full bg-white text-black font-normal text-base hover:bg-white/90 transition-colors duration-200 shadow-lg">
            Book a Founder Consultation
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 right-8">
    <div class="w-10 h-10 border border-white/30 rounded-full flex items-center justify-center backdrop-blur-sm bg-white/5 hover:bg-white/10 transition-colors duration-200 cursor-pointer">
      <span class="text-white/70 text-lg animate-bounce">↓</span>
    </div>
  </div>
</section>