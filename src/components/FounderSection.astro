---
// Astro wrapper component for Founder Section
// Mostly static content with glass card styling
import type { Translations } from '@/lib/i18n';

export interface Props {
  class?: string;
  translations: Translations;
}

const { class: className, translations } = Astro.props;
import { Button } from '@/components/ui/button';
---

<section 
  class={`min-h-screen founder-gradient text-white flex items-center justify-center relative overflow-hidden py-16 lg:py-24 ${className || ''}`}
>
  <!-- Soft neutral background -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_25%_25%,rgba(148,163,184,0.03),transparent_75%)]" />
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_75%_75%,rgba(156,163,175,0.02),transparent_80%)]" />

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-16 items-center">
      <!-- Mobile tagline - shown before photo on mobile only -->
      <div class="lg:hidden col-span-1 mb-4">
        <h2 class="text-3xl font-light tracking-tight leading-tight text-left text-shadow-subtle">
          {translations.founder_section.tagline} <span class="font-serif italic font-medium text-white">{translations.founder_section.tagline_accent}</span> {translations.founder_section.tagline_suffix}
        </h2>
      </div>

      <!-- Left column - Founder photo (40%) -->
      <div class="lg:col-span-2 relative overflow-hidden flex items-center justify-center">
        <div class="relative w-full max-w-lg">
          <div class="relative rounded-3xl bg-slate-800/30 backdrop-blur-md border border-white/10 shadow-2xl">
            <div class="relative aspect-[3/4] overflow-hidden rounded-3xl">
              <img
                src="/chris_kobler_founder.jpg"
                alt={translations.founder_section.image_alt}
                class="w-full h-full object-cover object-center rounded-3xl"
              />
              <!-- Subtle top highlight like hero badge -->
              <div class="absolute top-0 left-1 right-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent rounded-full" />
            </div>
          </div>
        </div>
      </div>

      <!-- Right column - Content (60%) -->
      <div class="lg:col-span-3 space-y-6 lg:space-y-8">
        <div class="space-y-8">
          <div class="space-y-6">
            <!-- Desktop tagline - hidden on mobile -->
            <h2 class="hidden lg:block text-3xl lg:text-4xl xl:text-5xl font-light tracking-tight leading-tight text-shadow-subtle">
              {translations.founder_section.tagline} <span class="font-serif italic font-medium text-white">{translations.founder_section.tagline_accent}</span> {translations.founder_section.tagline_suffix}
            </h2>

          </div>
          
          <div class="space-y-6 flex flex-col lg:gap-4">
            <!-- Name - shown first on mobile, second on desktop -->
            <div class="order-1 lg:order-2">
              <p class="text-white/90 lg:text-white/80 text-sm font-medium text-left text-shadow-subtle">
                <strong class="text-white lg:text-white">{translations.founder_section.name}</strong>, {translations.founder_section.title}
              </p>
            </div>

            <!-- Quote - shown second on mobile, first on desktop -->
            <blockquote class="relative order-2 lg:order-1">
              <p class="text-xl lg:text-2xl font-light italic text-white/90 text-shadow-subtle leading-relaxed border-l-2 border-white/20 pl-6">
                {translations.founder_section.quote}
              </p>
            </blockquote>
          </div>

          <div class="space-y-6">
            
            <div class="text-center lg:text-left">
              <a href="https://www.linkedin.com/in/chrispkobler/" target="_blank" rel="noopener noreferrer" class="w-full lg:w-auto inline-block">
                <Button variant="primary" className="hover-lift animate-on-scroll w-full lg:w-auto px-12">
                  {translations.founder_section.cta_button}
                </Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>