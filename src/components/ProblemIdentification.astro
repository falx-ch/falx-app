---
// Astro wrapper component for Workflow Breakdown Section
// Static structure with selective hydration for interactive elements
import type { Translations } from '@/lib/i18n';

export interface Props {
  class?: string;
  translations?: Translations;
}

const { class: className, translations } = Astro.props;

// Import the interactive React component (to be refactored)
import ProblemShowcaseCards from './problem-showcase-cards.tsx';
---

<section 
  class={`min-h-screen workflow-gradient text-white flex items-center justify-center relative overflow-hidden py-16 lg:py-24 ${className || ''}`}
>
  <!-- Soft neutral background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,rgba(55,65,81,0.08),transparent_65%)]" />
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_70%,rgba(75,85,99,0.05),transparent_65%)]" />

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-16 items-center">
      <!-- Left column - Interactive Problem Cards Grid (60%) -->
      <div class="lg:col-span-3 order-2 lg:order-1 relative">
        <!-- Interactive cards with animations - only hydrate when visible -->
        <ProblemShowcaseCards client:visible />
      </div>

      <!-- Right column - Static Content (40%) -->
      <div class="lg:col-span-2 space-y-6 lg:space-y-8 order-1 lg:order-2">
        <div>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-light mb-4 lg:mb-6 tracking-tight leading-tight">
            {translations?.problem_identification?.headline || 'Sie besitzen Ihre'} <span class="font-serif italic font-medium text-red-300">{translations?.problem_identification?.headline_accent || 'Zeit'}</span> {translations?.problem_identification?.headline_suffix || 'nicht'}
          </h2>
          <p class="text-white/60 text-base lg:text-lg leading-relaxed mb-6 lg:mb-8">
            {translations?.problem_identification?.description || 'Fragmentierte Systeme, manuelle Prozesse und Datenchaos kosten Schweizer Unternehmen täglich wertvolle Ressourcen.'}
          </p>
        </div>

        <!-- Static statistics - no interactivity needed -->
        <div class="space-y-3 lg:space-y-4">
          {translations?.problem_identification?.stats?.map((stat, index) => (
            <div class="flex items-center space-x-3 lg:space-x-4">
              <div class="w-2 h-2 rounded-full bg-red-300 flex-shrink-0"></div>
              <span class="text-white/70 text-sm lg:text-base">{stat}</span>
            </div>
          )) || [
            <div class="flex items-center space-x-3 lg:space-x-4">
              <div class="w-2 h-2 rounded-full bg-red-300 flex-shrink-0"></div>
              <span class="text-white/70 text-sm lg:text-base">53% der Schweizer KMU ohne Digitalisierungsstrategie</span>
            </div>,
            <div class="flex items-center space-x-3 lg:space-x-4">
              <div class="w-2 h-2 rounded-full bg-red-300 flex-shrink-0"></div>
              <span class="text-white/70 text-sm lg:text-base">56% teilen bereits Firmendaten mit unsicheren KI-Tools</span>
            </div>,
            <div class="flex items-center space-x-3 lg:space-x-4">
              <div class="w-2 h-2 rounded-full bg-red-300 flex-shrink-0"></div>
              <span class="text-white/70 text-sm lg:text-base">Nur 50% führen jährliche Technologie-Analysen durch</span>
            </div>
          ]}
        </div>
      </div>
    </div>
  </div>
</section>